@{
    ViewBag.Title = "Dedicated Tanks";
}

<div class="well well-lg">
    <!--title-->
    <div class="row">
        <div class="col-md-12 nopadding">
            <h4 class="dow-color col-md-6">Dedicated Tanks</h4>
        </div>
        <div class="col-md-12 nopadding">
            <span class="ml20">Report of tanks dedicated to products and locations.</span>
        </div>
    </div>
    @*report criteria*@
    @using (Html.BeginForm("DedicatedTanks", "Report", FormMethod.Post))
    {
        <div class="row mt20 mb20">
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Current Location: </label>
                        <input  name="CurrentLocationDS" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Dedicated Location:</label>
                        <input  name="DedicatedLocationDS" type="text" class="form-control">
                    </div>
                </div>
            </div>
             <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Product: </label>
                        <input  name="DedicatedProductDS" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <!--save button-->
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-default btn-primary" value="Run Report" />
                    </div>
                </div>
            </div>

        </div>
    }

</div>

<!--script-->
@section scripts
{
    <script>

        $(function () {

            $("#StartDate").datetimepicker({
                format: 'm/d/Y'
            });
            $("#EndDate").datetimepicker({
                format: 'm/d/Y'
            });

            //ddlContact
            $("#ddlContact").select2({
                minimumInputLength: 0,
                cache: false,
                ajax: {
                    url: "/Report/PopulateSecurityDDL",
                    dataType: 'json',
                    quietMillis: 650,
                    data: function (term) {
                        return {
                            searchTerm: term // search term
                        };
                    },
                    results: function (data) {
                        return { results: data };
                    }
                }
            });

        });

    </script>
}

