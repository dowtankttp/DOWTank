@model DOWTank.Controllers.AuditMissingMovesPostModel
@{
    ViewBag.Title = "Audit Missing Moves";
}
<div class="well well-lg">
    <!--title-->
    <div class="row">
        <div class="col-md-12 nopadding">
            <h4 class="dow-color col-md-6">Audit Missing Moves</h4>
        </div>
        <div class="col-md-12 nopadding">
            <span class="ml20">This report lists moves where the FROM: location does not match the previous TO: location.</span>
        </div>
    </div>
    @*report criteria*@
    @using (Html.BeginForm("AuditMissingMoves", "Report", FormMethod.Post))
    {
        <div class="row mt20 mb20">
            <div class="form-group">
                 <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Tank #:</label>
                        <input type="text" name="TankNumber" id="TankNumber" value="@Model.TankNumber" class="form-control"/>
                    </div>
                </div>
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Start Date:</label>
                        <input type="text" name="StartDate" id="StartDate" value="@Model.StartDate.ToShortDateString()" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>End Date:</label>
                        <input type="text" name="EndDate" id="EndDate" value="@Model.EndDate.ToShortDateString()" class="form-control"/>
                    </div>
                </div>
            </div>
            <!--save button-->
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-default btn-primary" value="Run Report" />
                    </div>
                </div>
            </div>

        </div>
    }

</div>

<!--script-->
@section scripts
{
    <script>

        $(function () {

            $("#StartDate").datetimepicker({
                format: 'm/d/Y'
            });
            $("#EndDate").datetimepicker({
                format: 'm/d/Y'
            });

        });

    </script>
}