@model DOWTank.Controllers.AuditMovesByUserPostModel
@{
    ViewBag.Title = "Audit Moves By User";
}
<div class="well well-lg">
    <!--title-->
    <div class="row">
        <div class="col-md-12 nopadding">
            <h4 class="dow-color col-md-6">Audit Moves By User</h4>
        </div>
        <div class="col-md-12 nopadding">
            <span class="ml20">This report lists the moves a user Added, Updated, or Deleted.</span>
        </div>
    </div>
    @*report criteria*@
    @using (Html.BeginForm("AuditMovesByUser", "Report", FormMethod.Post))
    {
        <div class="row mt20 mb20">
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>Start Date:</label>
                        <input type="text" name="StartDate" id="StartDate" value="@Model.StartDate.ToShortDateString()" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>End Date:</label>
                        <input type="text" name="EndDate" id="EndDate" value="@Model.EndDate.ToShortDateString()" class="form-control"/>
                    </div>
                </div>
            </div>
             <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-3">
                        <label>User:</label>
                          <input id="ddlContact" name="UserAn" type="hidden" style="width: 100%; box-sizing: border-box;">
                    </div>
                </div>
            </div>
            <!--save button-->
            <div class="form-group">
                <div class="row no-row-margin">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-default btn-primary" value="Run Report" />
                    </div>
                </div>
            </div>

        </div>
    }

</div>

<!--script-->
@section scripts
{
    <script>

        $(function () {

            $("#StartDate").datetimepicker({
                format: 'm/d/Y'
            });
            $("#EndDate").datetimepicker({
                format: 'm/d/Y'
            });

            //ddlContact
            $("#ddlContact").select2({
                minimumInputLength: 0,
                cache: false,
                ajax: {
                    url: "/Report/PopulateSecurityDDL",
                    dataType: 'json',
                    quietMillis: 650,
                    data: function (term) {
                        return {
                            searchTerm: term // search term
                        };
                    },
                    results: function (data) {
                        return { results: data };
                    }
                }
            });

        });

    </script>
}